<Window x:Class="Tires.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tires"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*" />
            <RowDefinition Height="290*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2" Background="#D3D3D3"></Grid>
        <Grid Grid.Row="0" Background="#A163F5"></Grid>
        <Image Source="/Resources/лого.png" HorizontalAlignment="Left"/>
        <TextBlock Text="Tires" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" FontFamily="Courier New"></TextBlock>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>
        <Button Content="Назад" Width="100" Height="40" FontSize="30" HorizontalAlignment="Right" Background="#A163F5" x:Name="GoBack" Click="GoBack_Click"></Button>
    </Grid>
</Window>
